// Place your key bindings in this file to overwrite the defaults
[
    // Moving around inside an editor (tabs)
    {
        "key": "cmd+k",
        "command": "workbench.action.nextEditor"
    },
    {
        "key": "cmd+j",
        "command": "workbench.action.previousEditor"
    },

    // Moving around between editors
    {
        "key": "cmd+shift+j",
        "command":"workbench.action.focusPreviousGroup"
    },
    {
        "key": "cmd+shift+k",
        "command":"workbench.action.focusNextGroup"
    },
    // Auto-format code
    {
        "key": "cmd+l",
        "command": "eslint.executeAutofix"
    },
    // Refactor name
    {
        "key": "cmd+shift+r",
        "command": "editor.action.rename"
    },
    // Advanced New File
    {
        "key": "cmd+alt+n",
        "command": "extension.advancedNewFile"
    },

    // START VIM-like navigation in explorer view
    {
        "key": "cmd+e",
        "command": "workbench.view.explorer"
    },
    {
        "key": "j",
        "command": "list.focusDown",
        "when": "listFocus"
    },
    {
        "key": "k",
        "command": "list.focusUp",
        "when": "listFocus"
    },
    {
        "key": "o",
        "command": "list.select",
        "when": "listFocus"
    },
    {
        "key": "h",
        "command": "list.collapse",
        "when": "listFocus"
    },
    {
        "key": "l",
        "command": "list.expand",
        "when": "listFocus"
    }
    // END VIM-like navigation in explorer view
]
